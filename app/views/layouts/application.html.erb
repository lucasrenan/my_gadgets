<!DOCTYPE html>
<html>
<head>
  <title>MyGadgets</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
    <% if user_signed_in? %>
      <%= current_user.email %> | <%= link_to "logout", logout_path, method: :delete %>
    <% else %>
      <%= link_to "login", login_path %> | <%= link_to "sign_up", sign_up_path %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
